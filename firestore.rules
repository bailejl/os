rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
  	match /notification-emails/{documents=**} {
      allow write: if true;
    }
  	match /dashboard-config/{documents=**} {
      allow read: if (request.auth.uid != null) && 
        (resource.data.tenantId == request.auth.token.firebase.tenant);
      allow write: if false;
    }
  	match /user-account/{documents=**} {
      allow read: if (request.auth.uid == resource.data.uid) && 
        (resource.data.tenantId == request.auth.token.firebase.tenant);
      allow write: if false;
    }
  	match /user-profile/{documents=**} {
      allow read, write: if (request.auth.uid == resource.data.uid) && 
        (resource.data.tenantId == request.auth.token.firebase.tenant);
    }
  	match /roles/{documents=**} {
      allow read: if (request.auth.uid != null) && 
        (resource.data.tenantId == request.auth.token.firebase.tenant);
      allow write: if false;
    }
    match /{document=**} {
      allow read, write: if false;
    }
  }
}