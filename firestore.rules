rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    match /{document=**} {
      allow read, write: if false;
    }
    match /core-rbac/{rbadId} {
      allow read: if isSignedIn() && isDataInTheirTenant() && isDataInTheirRole()
      allow write: if false
    }

    /// Functions ///

    function isDataInTheirRole() {
      return resource.data.role == request.auth.token.claim.role
    }

    function isDataInTheirTenant() {
      return resource.data.tenantId == request.auth.token.claim.tenantId
    }

    function isSignedIn() {
      return request.auth != null
    }

    //function isOwner(userId){
    //  return request.auth.uid == userId
    //}
  }
}
